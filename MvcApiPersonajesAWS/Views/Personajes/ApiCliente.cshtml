<h1>Vistas Personajes Ajax</h1>

 @section Scripts {
    <script>
        $(document).ready(function() {
            $("#botoncargar").click(function() {
                var url =  "https://18.212.24.61/api/personajes";
                $.ajax({
                    url: url,
                    method: "GET",
                    success: function(data) {
                        var html = "";
                        $.each(data, function(index, personaje){
                            html += "<tr>";
                            html += "<td>" + personaje.idPersonaje + "</td>";
                            html += "<td>" + personaje.nombre + "</td>";
                            html += "<td><img src='" + personaje.imagen + "' style='height:150px' /></td>";
                            html += "</tr>";
                            $("#tablapersonajes tbody").html(html);
                        })
                    }
                });
            })
        });
    </script>
}


 <button id="botoncargar" class="btn btn-danger">
    Cargar Personajes
</button>
<br/>
 
<table id="tablapersonajes" class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Imagen</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>


